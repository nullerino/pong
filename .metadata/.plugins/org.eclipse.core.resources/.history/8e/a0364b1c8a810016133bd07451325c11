package com.nullerino.pong.game.paddle;

public class Paddle
{

	private int				xPos;
	private int				yPos;
	private int				side;
	private int[]			bounds;
	private final int	HEIGHT;
	private final int	WIDTH;

	public Paddle(int width, int height, int side)
	{
		this.HEIGHT = height;
		this.WIDTH = width;
	}

	public int getxPos()
	{
		return xPos;
	}

	public void setxPos(int xPos)
	{
		this.xPos = xPos;
	}

	public int getyPos()
	{
		return yPos;
	}

	public void setyPos(int yPos)
	{
		this.yPos = yPos;
	}

	public int[] getBounds()
	{
		return bounds;
	}

}
