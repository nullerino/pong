package com.nullerino.pong.game.ball;

public class Ball
{

	private int ballX;
	private int ballY;
	private int delta = -3;
	private double angleInRads;
	private final int WIDTH;
	private final int HEIGHT;
	private static final int ballRad = 20;

	/**
	 * @param width
	 * @param height
	 */
	public Ball(int width, int height)
	{
		this.HEIGHT = height - 30;
		this.WIDTH = width - 8;
		angleInRads = Math.PI / 3;

		ballX = width / 2;
		ballY = height / 2;
	}

	/**
	 * @return
	 */
	public int getBallX()
	{
		return ballX;
	}

	/**
	 * @param ballX
	 */
	public void setBallX(int ballX)
	{
		this.ballX = ballX;
	}

	/**
	 * @return
	 */
	public int getBallY()
	{
		return ballY;
	}

	/**
	 * @param ballY
	 */
	public void setBallY(int ballY)
	{
		this.ballY = ballY;
	}

	/**
	 * @return
	 */
	public static int getBallRad()
	{
		return ballRad;
	}

	/**
	 * @return the angle
	 */
	public double getAngleInRads()
	{
		return angleInRads;
	}

	/**
	 * @param angle
	 *          the angle to set
	 */
	public void setAngleInRads(double angleInRads)
	{
		this.angleInRads = angleInRads;
	}

	/**
	 * @return the delta
	 */
	/**
	 * @return
	 */
	public int getDelta()
	{
		return delta;
	}

	public void deflect()
	{
		delta *= -1;
	}

	public void update()
	{
		ballX += delta * Math.sin(angleInRads);
		ballY += delta * Math.cos(angleInRads);

		if (ballX <= 0)
		{
			ballX = 0;
		}
		else if (ballX >= WIDTH)
		{
			ballX = WIDTH;
		}

		if (ballY <= 0)
		{
			ballY = 0;
		}
		else if (ballY >= HEIGHT)
		{
			ballY = HEIGHT;
		}
	}
}
