package com.nullerino.pong.gui;

import java.util.Random;

import com.nullerino.pong.game.Pong;

public class Screen
{

	private final int		WIDTH;
	private final int		HEIGHT;
	private final int[]	pixels;

	public Screen(int WIDTH, int HEIGHT)
	{
		this.WIDTH = WIDTH;
		this.HEIGHT = HEIGHT;
		this.pixels = new int[WIDTH * HEIGHT];
	}

	public void draw(int xOff, int yOff)
	{
		Random random = new Random();
		for (int y = 0; y < this.HEIGHT; ++y)
		{
			int yPix = y + yOff;

			if (yPix < 0 || yPix > this.HEIGHT)
			{
				continue;
			}

			for (int x = 0; x < this.WIDTH; ++x)
			{
				int xPix = x + xOff;

				if (xPix < 0 || xPix > this.WIDTH)
				{
					continue;
				}

				pixels[xPix * yPix * this.WIDTH] = random.nextInt();
			}
		}
	}

	public void render(Pong game)
	{
		draw(0, 0);
	}
}
